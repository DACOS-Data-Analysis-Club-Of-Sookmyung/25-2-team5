import os
import time
import requests
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC

# --- 설정 ---
# 검색할 키워드 목록
KEYWORDS = ["모던", "페미닌", "시크"] 
# 각 키워드별로 수집할 이미지 개수
IMAGES_TO_CRAWL = 100
# --- 설정 끝 ---


def setup_driver():
    """Selenium WebDriver를 설정하고 반환합니다."""
    options = webdriver.ChromeOptions()
    
    # 크롬 드라이버 설정
    options = webdriver.ChromeOptions()
    options.add_argument('--no-sandbox')
    options.add_argument('--disable-dev-shm-usage')

    driver = webdriver.Chrome(service=Service(ChromeDriverManager().install()), options=options)
    return driver

def scroll_to_load_images(driver, target_count):
    """페이지를 스크롤하여 이미지를 로드하고 이미지 URL을 수집합니다."""
    image_urls = set()
    last_height = driver.execute_script("return document.body.scrollHeight")

    while len(image_urls) < target_count:
        # 페이지 맨 아래로 스크롤
        driver.execute_script("window.scrollTo(0, document.body.scrollHeight);")
        # 페이지 로딩 대기
        time.sleep(2)  # 로딩 시간에 따라 조절 가능

        # 새로 로드된 이미지 찾기
        # 'product-card-thumbnail' 클래스를 가진 div 아래의 img 태그를 찾습니다.
        # 이 선택자는 지그재그 웹사이트 구조에 따라 변경될 수 있습니다.
        images = driver.find_elements(By.CSS_SELECTOR, "div.product-card-thumbnail > img")
        for img in images:
            src = img.get_attribute('src')
            if src and src.startswith('https'):
                image_urls.add(src)

        # 페이지 높이를 확인하여 더 이상 스크롤이 안되는 경우 중단
        new_height = driver.execute_script("return document.body.scrollHeight")
        if new_height == last_height:
            print("더 이상 로드할 이미지가 없습니다.")
            break
        last_height = new_height
        print(f"현재 수집된 이미지 URL 개수: {len(image_urls)}개")

    return list(image_urls)

def download_images(keyword, urls, max_count):
    """수집된 URL에서 이미지를 다운로드합니다."""
    # 키워드 이름으로 폴더 생성
    save_dir = f"./{keyword}"
    os.makedirs(save_dir, exist_ok=True)
    
    print(f"\n'{keyword}' 키워드 이미지 다운로드를 시작합니다. (총 {min(len(urls), max_count)}개)")
    
    for i, url in enumerate(urls):
        if i >= max_count:
            break
        try:
            response = requests.get(url, stream=True, timeout=10)
            if response.status_code == 200:
                # 파일 이름 설정 (001.jpg, 002.jpg, ...)
                filename = f"{str(i+1).zfill(3)}.jpg"
                filepath = os.path.join(save_dir, filename)
                with open(filepath, 'wb') as f:
                    f.write(response.content)
                print(f"({i+1}/{max_count}) {filename} 다운로드 완료")
            else:
                print(f"이미지 다운로드 실패: {url} (상태 코드: {response.status_code})")
        except Exception as e:
            print(f"이미지 다운로드 중 오류 발생: {url} ({e})")
            
def crawl_zigzag():
    """지그재그 이미지 크롤링을 실행하는 메인 함수"""
    driver = setup_driver()
    
    for keyword in KEYWORDS:
        print(f"\n--- '{keyword}' 키워드 크롤링 시작 ---")
        
        # 1. 지그재그 검색 페이지로 이동
        search_url = f"https://zigzag.kr/search?keyword={keyword}"
        driver.get(search_url)
        
        # 2. '인기순' 정렬 버튼 클릭 (수정된 로직)
        try:
            # 페이지가 로드될 때까지 최대 10초 대기
            wait = WebDriverWait(driver, 10)
            
            # 1단계: 정렬 메뉴('직잭추천순') 클릭
            sort_menu_button = wait.until(EC.element_to_be_clickable((By.XPATH, '//*[@id="__next"]/div/div[1]/main/section/button')))
            sort_menu_button.click()
            print("정렬 메뉴를 열었습니다.")
            
            # 메뉴가 열릴 시간을 잠시 대기
            time.sleep(1) 
            
            # 2단계: '인기순' 옵션 클릭
            popularity_option = wait.until(EC.element_to_be_clickable((By.XPATH, '//*[@id="__next"]/div/div[1]/main/section/div[2]/div[2]/div/ul/li[2]')))
            popularity_option.click()
            print("'인기순'으로 정렬했습니다.")

            time.sleep(2) # 정렬 후 상품 로딩 대기
        except Exception as e:
            print(f"'인기순' 정렬 중 오류가 발생했습니다. 기본 정렬로 진행합니다. ({e})")

        # 3. 스크롤하며 이미지 URL 수집
        image_urls = scroll_to_load_images(driver, IMAGES_TO_CRAWL)
        
        # 4. 수집된 URL의 이미지 다운로드
        download_images(keyword, image_urls, IMAGES_TO_CRAWL)

    driver.quit()
    print("\n--- 모든 크롤링 작업이 완료되었습니다. ---")

if __name__ == "__main__":
    crawl_zigzag()